<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

  <CheckBox
    android:id="@+id/litem_checkBox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/litem_editText"
    android:layout_alignBottom="@+id/litem_editText"
    android:layout_alignParentStart="true"
    android:text="@string/function_equal"
    android:textSize="18sp"/>

  <EditText
    android:id="@+id/litem_editText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"
    android:selectAllOnFocus="true"
    android:singleLine="true"
    tools:ignore="LabelFor"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/litem_checkBox"
    android:layout_toStartOf="@+id/litem_imageButton"/>

  <ImageButton
    android:id="@+id/litem_imageButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/litem_editText"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:background="@android:color/transparent"
    android:contentDescription="@string/function_del"
    app:srcCompat="@android:drawable/ic_delete"/>
</RelativeLayout>